{
  "manifest_version": 3,
  "name": "FocusFalcon",
  "description": "Block distractions. Build focus. Feel good doing it.",
  "version": "0.1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
