{
  "manifest_version": 3,
  "name": "FocusFalcon",
  "description": "Block distractions. Build focus. Feel good doing it.",
  "version": "0.1.2",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mainpage/blocked.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/Falcon48.png"
  },
  "options_ui": {
    "page": "settings/setting.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "focusfalcon@extensions",
      "data_collection_permissions": {
        "required": ["none"],
        "data_types": [],
        "purposes": [],
        "data_categories": []
      }
    }
  }
}