{
  "manifest_version": 3,
  "name": "FocusFalcon",
  "description": "Block distractions. Build focus. Feel good doing it.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mainpage/blocked.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/avatar-capybara.png",
    "48": "icons/avatar-falcon.png",
    "128": "icons/avatar-red-panda.png"
  },
  "options_ui": {
    "page": "settings/setting.html",
    "open_in_tab": true
  }
}